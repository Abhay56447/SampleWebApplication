@model List<Category>
<div class="col-md-6">
    <h3>Category</h3>
    <table class="table table-bordered table-striped">
        <thead></thead>
        <tbody>
            @foreach (var cat in Model.OrderBy(t => t.DisplayOrder))
            {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.DisplayOrder</td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@cat.Id"  asp-controller="Category" asp-action="Edit">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-route-id="@cat.Id" asp-controller="Category" asp-action="Delete">Delete</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@cat.Id" asp-controller="Book" asp-action="Index">Books</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
    </div>
</div>
